@model List<Major>
@{
    ViewBag.Title = "Majors";
}

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@m.MajorId</td>
                <td>@m.Title</td>

                <td>                 
                    <a asp-controller="Major" asp-action="Delete" asp-route-id="@m.MajorId" class="btn btn-info"> Delete </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<form asp-action="Add" method="get">
    <button type="submit" class="btn btn-info"> Add Majors </button>
</form>




